<idea-plugin>
  <extensions defaultExtensionNs="cidr.debugger">
    <languageSupport language="vlang" implementationClass="org.vlang.debugger.lang.VlangDebuggerLanguageSupport"/>
    <lineBreakpointFileTypesProvider implementation="org.vlang.debugger.VlangLineBreakpointFileTypesProvider"/>
    <debugProcessConfigurator implementation="org.vlang.debugger.runconfig.VlangDebugProcessConfigurator"/>
    <valueRendererExtension implementation="org.vlang.debugger.VlangValueRendererExtension"/>
    <localVariablesFilterHandler implementation="org.vlang.debugger.lang.VlangLocalVariablesFilterHandler"/>
    <valueRendererFactory implementation="org.vlang.debugger.VlangValueRendererFactory"/>
    <editorsExtension language="vlang" implementationClass="org.vlang.debugger.lang.VlangEditorsExtension"/>
    <backendConsoleInjectionHelper implementation="org.vlang.debugger.VlangBackendConsoleInjectionHelper"/>
  </extensions>
</idea-plugin>
